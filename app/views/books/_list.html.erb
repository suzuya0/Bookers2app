 <div class='col-md-3'>
    <h2>User info</h2>
    <table class='table'>
      <tr><%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %></tr>
      <tr>
        <th>name</th>
	      <th><%= user.name %></th>
      </tr>
      <tr>
	      <th>introduction</th>
	      <th><%= user.introduction %></th>
      </tr>
    </table>
    
    
    <div class='row'>
        <%= link_to edit_user_path(user.id) ,class:"btn btn-outline-secondary btn-block fas fa-user-cog" do %>
        <% end %>
    </div>  



    <h2 class="mt-3">New book</h2>
    <%= form_with model:book, local:true do |f| %>
    <div class="field">
      <div><%= f.label :title, 'Title' %></div>
      <div><%= f.text_field :title %></div>
    </div>
    
    <div class="field">
      <div><%= f.label :title, 'Opinion' %></div>
      <div><%= f.text_area :body %></div>
    </div>
 
    <div class="action">
      <%= f.submit 'Create Book',class:"btn btn-success"%>
    </div>
    <% end %>
    
      
  </div>
  