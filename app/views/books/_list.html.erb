 <div class='col-md-3'>
    <h2>User info</h2>
    <table class='table'>
      <tr><%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %></tr>
      <tr>
        <th>name</th>
	      <th><%= user.name %></th>
      </tr>
      <tr>
	      <th>introduction</th>
	      <th><%= user.introduction %></th>
      </tr>
      <tr>
        <th>follow</th>
        <th><%= link_to "#{user.followings.count}", user_followings_path(user.id) %></th>
      </tr>
      <tr>
        <th>follower</th>
        <th><%= link_to "#{user.followers.count}", user_followers_path(user.id) %></th>
      </tr>
    </table>
    
    
    
    
    <div>
          <% if current_user != user %>
            <% if current_user.following?(user) %>
              <%= link_to "フォロー外す", user_relationships_path(user.id), class:"btn btn-info", method: :delete %>
            <% else %>
              <%= link_to "フォローする", user_relationships_path(user.id), class:"btn btn-info", method: :post %>
            <% end %>
          <% end %>
    </div>
    
    
    
    <br>
    
    <div class='row'>
        <%= link_to edit_user_path(user.id) ,class:"btn btn-outline-secondary btn-block fas fa-user-cog" do %>
        <% end %>
    </div>  



    <h2 class="mt-3">New book</h2>
    <%= form_with model:book, local:true do |f| %>

    
      <div class="form-group">
        <label for="book_name">Title</label>
        <%= f.text_field :title, autofocus: true, class:"form-control",id:"inputTitle"%>
      </div>
      
    
      <div class="form-group">
        <label for="book_body">Opinion</label>
        <%= f.text_area :body, autofocus: true, class:"form-control",id:"inputBody"%>
      </div>
      
      
    
 
    <div class="action">
      <%= f.submit 'Create Book',class:"btn btn-success"%>
    </div>
    <% end %>
    
  </div>
  
  
  
  