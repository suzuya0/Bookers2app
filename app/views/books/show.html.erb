<div class="container"> 
  <div class="row">  

    <%= render 'books/list', book: @book_list,user: @user_list  %>
 
    <div class='col-md-8 offset-md-1'>
      <h2>Book detail</h2>
      <table class='table'>
          <tr>
            <td>
              <%= link_to user_path(@book.user.id) do %>
              <%= attachment_image_tag @book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg",size: "40x40" %>
              <br>
              <%= @book.user.name %>
              <% end %>
            </td>
            <td><%= link_to book_path(@book.id) do %><%= @book.title %><% end %></td>
            <td><%= @book.body %></td>
 
            <td id = "favorites-<%= @book.id %>"><%= render 'favorites/favorites_btn', book: @book  %></td>

 
            <td><% if @book.user == current_user %>
                 <%= link_to "Edit", edit_book_path(@book.id) ,class:'btn btn-sm btn-success edit_book_13499' %>
                <% end %>
            </td>
            
            <td><% if @book.user == current_user %>
                <%= link_to "Destroy", book_path(@book),class:'btn btn-sm btn-danger destroy_book_13499', method: :delete,"data-confirm" => "本当に消しますか？" %>
                <% end %>
          　</td>
          </tr>
      </table>
      
      <div id="comments">
          <%= render 'book_comments/comments', book: @book %>
      </div>
      
      <div class="new-comment">
        <%= render 'book_comments/new_comment', book: @book,book_comment: @book_comment %>
      </div>
    </div>
  </div>
</div>









