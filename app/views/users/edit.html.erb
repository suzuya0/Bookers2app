


<div class='container'>

  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

      <h2>User info</h2>
      <% if @user.errors.any? %>
        <div id="error_explanation">
          <h3><%= @user.errors.count %> error prohibited this obj from being saved:</h3>
          <ul>
            <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      
      
      <%= form_with model:@user, local:true do |f| %>
      <div class="form-group">
        <label for="user_name">Name</label>
        <%= f.text_field :name, autofocus: true, class:"form-control",id:"inputName"%>
      </div>
 
      <div class="form-group">
        <label for="user_image">Image</label>
        <%= f.attachment_field :profile_image, class: "w-100" %>
      </div>
      
      <div class="form-group">
        <label for="title">Introduction</label>
        <%= f.text_area :introduction, autofocus: true, class:"form-control",id:"inputintroduction"%>
      </div>
      <%= f.submit "Update User",class:"btn btn-secondary" %>
      <% end %>
    </div>
  </div>
</div>












